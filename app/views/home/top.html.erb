<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% @client.user_timeline.first(20).each do |tweet| %>
          <div class="thumbnail">
            <% if tweet.media[0] %>
                <%= image_tag(tweet.media[0].media_url, class:"img-responsive center-block") %>
                <%= tweet.text %>
            <% else %>
                <%= tweet.text %>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
</div>